<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.VogaisFragment">

    <ImageView
        android:id="@+id/imageDog"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/cao"
        app:layout_constraintBottom_toTopOf="@+id/imageLion"
        app:layout_constraintEnd_toStartOf="@+id/imageCat"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageCat"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/gato"
        app:layout_constraintBottom_toTopOf="@+id/imageSheep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageDog"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageLion"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/leao"
        app:layout_constraintBottom_toTopOf="@+id/imageMonkey"
        app:layout_constraintEnd_toStartOf="@+id/imageSheep"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDog" />

    <ImageView
        android:id="@+id/imageSheep"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ovelha"
        app:layout_constraintBottom_toTopOf="@+id/imageCow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageLion"
        app:layout_constraintTop_toBottomOf="@+id/imageCat" />

    <ImageView
        android:id="@+id/imageMonkey"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/macaco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageCow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageLion" />

    <ImageView
        android:id="@+id/imageCow"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/vaca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageMonkey"
        app:layout_constraintTop_toBottomOf="@+id/imageSheep" />


</androidx.constraintlayout.widget.ConstraintLayout>